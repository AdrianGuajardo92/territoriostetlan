/*
  X-Frame-Options: DENY
  X-XSS-Protection: 1; mode=block
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin
  
  # Headers de seguridad básicos (sin Clear-Site-Data global)
  Cache-Control: no-cache, no-store, must-revalidate, private, max-age=0
  Pragma: no-cache
  Expires: 0

# Solo aplicar Clear-Site-Data a recursos críticos de actualización
/
  Content-Type: text/html; charset=utf-8
  Cache-Control: no-cache, no-store, must-revalidate, private, max-age=0
  Pragma: no-cache
  Expires: 0
  Clear-Site-Data: "cache"

/index.html
  Content-Type: text/html; charset=utf-8
  Cache-Control: no-cache, no-store, must-revalidate, private, max-age=0
  Pragma: no-cache
  Expires: 0
  Clear-Site-Data: "cache"

/sw.js
  Content-Type: application/javascript; charset=utf-8
  Cache-Control: no-cache, no-store, must-revalidate, private, max-age=0
  Pragma: no-cache
  Expires: 0
  Clear-Site-Data: "cache"

/version.json
  Content-Type: application/json; charset=utf-8
  Cache-Control: no-cache, no-store, must-revalidate, private, max-age=0
  Pragma: no-cache
  Expires: 0
  Clear-Site-Data: "cache"

# Assets JavaScript - Cache moderado sin Clear-Site-Data
/assets/*.js
  Content-Type: application/javascript; charset=utf-8
  Cache-Control: public, max-age=604800, immutable
  
/assets/*.css
  Content-Type: text/css; charset=utf-8
  Cache-Control: public, max-age=604800, immutable

# Source maps - Cache largo
/assets/*.map
  Cache-Control: public, max-age=2592000, immutable

# Imágenes y recursos estáticos - Cache largo
/assets/*.png
  Cache-Control: public, max-age=2592000, immutable

/assets/*.jpg
  Cache-Control: public, max-age=2592000, immutable

/assets/*.svg
  Cache-Control: public, max-age=2592000, immutable

/*.svg
  Cache-Control: public, max-age=2592000, immutable

# Manifest para PWA
/manifest.json
  Content-Type: application/json; charset=utf-8
  Cache-Control: public, max-age=3600

# Fonts - Cache muy largo
/assets/*.woff2
  Cache-Control: public, max-age=31536000, immutable

/assets/*.woff
  Cache-Control: public, max-age=31536000, immutable 